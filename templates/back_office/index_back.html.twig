{% extends 'base_back_2.html.twig' %}

{% block title %}FrontOffice{% endblock %}

{% block body %}
    <div class="row mt-3">
        <div class="col-12 col-md-4">
            <div class="card h-100">
                <div class="card-header">
                    <h2 class="fs-3">Estadístiques de ventes</h2>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Vehicles més venuts</h5>
                    <canvas id="myPieChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-4">
            <div class="card h-100">
                <div class="card-header">
                    <h2 class="fs-3">Percentatge de ventes</h2>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Top 5 marques</h5>

                    {% for brand, percentage in topBrands %}
                        <div class="progress-container">
                            <div class="progress-label">{{ brand }}</div>
                            <div class="progress h-50" role="progressbar" aria-label="{{ brand }}"
                                 aria-valuenow="{{ percentage }}"
                                 aria-valuemin="0" aria-valuemax="100">
                                <div class="progress-bar bg-success text-light"
                                     style="width: {{ percentage }}%">{{ percentage }}%
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="col-12 col-md-4">
            <div class="card h-100">
                <div class="card-header">
                    <h2 class="fs-3">Vehicles més populars</h2>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        {% for vehicle in vehicles %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                {{ vehicle.model.brand.name }}
                                <span class="badge bg-danger rounded-pill">{{ vehicle.model.name }}</span>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>


        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-6 col-sm-12 my-5">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="fs-3">Ventes per regió</h2>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive text-center">
                                <table class="table table-striped table-hover">
                                    <thead class="table-light">
                                    <tr>
                                        <th scope="col">Regió</th>
                                        <th scope="col">Total de ventes</th>
                                        <th scope="col">Ingressos</th>
                                    </tr>
                                    </thead>
                                    <tbody class="table-group-divider">
                                    <tr>
                                        <td>Europa</td>
                                        <td>150</td>
                                        <td>500,000 €</td>
                                    </tr>
                                    <tr>
                                        <td>Amèrica</td>
                                        <td>120</td>
                                        <td>400,000 €</td>
                                    </tr>
                                    <tr>
                                        <td>Asia</td>
                                        <td>100</td>
                                        <td>300,000 €</td>
                                    </tr>
                                    <tr>
                                        <td>Àfrica</td>
                                        <td>80</td>
                                        <td>200,000 €</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
{% endblock %}
