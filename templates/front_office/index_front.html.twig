{% extends 'base_2.html.twig' %}

{% block title %}FrontOffice{% endblock %}

{% block body %}

    <!-- Modal -->
    <div class="modal fade" id="cookieModal" tabindex="-1" aria-labelledby="cookieModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cookieModalLabel">Política de Cookies</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Aquí coloca el texto de tu política de cookies -->
                    <p>Tu texto de política de cookies aquí.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4 mb-4">
        <h1 class="display-4 text-center">Benvingut a BHEC</h1>
        <div class="row">
            <div class="col-md-6">
                <ul class="list-group">
                    {% for brand in brands|slice(0, brands|length/2) %}
                        <li class="list-group-item">
                            <a href="{{ path('app_catalogue_index', {'q': brand.name}) }}" class="btn btn-light btn-block w-100">
                                {{ brand.name }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="col-md-6">
                <ul class="list-group">
                    {% for brand in brands|slice(brands|length/2) %}
                        <li class="list-group-item">
                            <a href="{{ path('app_catalogue_index', {'q': brand.name}) }}" class="btn btn-light btn-block w-100">
                                {{ brand.name }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}