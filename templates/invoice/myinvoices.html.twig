{% extends 'base_2.html.twig' %}

{% block title %}My Invoices{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# <link rel="stylesheet" href="{{ asset('equip3/css/Personal.css') }}"> #}
{% endblock %}

{% block body %}
    <section class="contingut col-10 mx-auto my-4">
        <h1 class="text-center mb-4">My Invoices</h1>

        <div class="text-center">
            {% if invoices %}
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Invoice Number</th>
                            <th>Invoice Date</th>
                            <th>Price</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for invoice in invoices %}
                            <tr>
                                <td>{{ invoice.number }}</td>
                                <td>{{ invoice.date | date('d/m/Y') }}</td>
                                <td>{{ invoice.price | number_format(2, ',', '.') }} â‚¬</td>
                                <td>
                                    <a class="btn btn-primary btn-sm" href="{{ path('app_invoice_myinvoices_detail', {'id': invoice.id}) }}">Details</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p class="lead">No hay facturas disponibles.</p>
            {% endif %}
        </div>

        {# <div class="navigation d-flex justify-content-center mt-3">
            {{ knp_pagination_render(pagination) }}
        </div> #}
    </section>
{% endblock %}
