{% extends 'base_back_3.html.twig' %}

{% block title %}Detalles de factura{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block body %}

    <section class="contingut">
        <h1>Detalls de factura
        </h1>
        <div id="invoice-table" class="d-sm-flex">
            <table class="border-0 table table-striped w-100 d-flex align-items-center">
                <tbody class="w-100">
                <tr class="d-flex">
                    <th class="w-50 bg-tertiary-BHEC">ID:</th>
                    <td class="w-50" data-title="Id:">{{ invoice.id }}</td>
                </tr>
                <tr class="d-flex">
                    <th class="w-50 bg-tertiary-BHEC">Número</th>
                    <td class="w-50" data-title="Numero:">{{ invoice.number }}</td>
                </tr>
                <tr class="d-flex">
                    <th class="w-50 bg-tertiary-BHEC">Preu:</th>
                    <td class="w-50" data-title="Precio:">{{ invoice.price }}</td>
                </tr>
                <tr class="d-flex">
                    <th class="w-50 bg-tertiary-BHEC">Data:</th>
                    <td class="w-50" data-title="Fecha:">{{ invoice.date ? invoice.date|date('Y-m-d') : '' }}</td>

                </tr>
                {% if invoice.customerOrder.vehicles is not empty %}
                    <tr>
                        <th class="w-50 bg-tertiary-BHEC">Vehicles</th>
                        {% for vehicle in invoice.customerOrder.vehicles %}
                        <td class="w-50">
                            {{ vehicle.model.brand.name }} {{ vehicle.model.name }}<br>
                            <strong>Matrícula:</strong> {{ vehicle.plate }}<br>
                            <strong>Preu de compra:</strong> {{ vehicle.buyPrice }} €<br>
                        </td>
                        {% endfor %}
                    </tr>
                {% endif %}
                </tbody>
            </table>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-secondary d-flex"><a class="text-decoration-none text-light" href="{{ path('app_invoice_index') }}">Back to list</a></button>

        </div>


    </section>

    </main>


{% endblock %}