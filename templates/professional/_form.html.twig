{{ form_start(form) }}
    <div class="container">
        <div class="row">
            <div class="col-7 px-5 border-end border-black border-opacity-25">
                <div class="row my-3">
                    <div class="col-sm-3 col-6">
                        <div class="m-2">
                            <fieldset>
                                {{ form_row(form.name, { 'attr': {'class': 'form-control border border-black border-opacity-25'} }) }}
                            </fieldset>
                        </div>
                    </div>
                    <div class="col-sm-3 col-6">
                        <div class="m-2">
                            <fieldset>
                                {{ form_row(form.lastname, { 'attr': {'class': 'form-control border border-black border-opacity-25'} }) }}
                            </fieldset>
                        </div>
                    </div>
                    <div class="col-sm-3 col-6">
                        <div class="m-2">
                            <fieldset class="w-100">
                                {{ form_row(form.dni, { 'attr': {'class': 'form-control border border-black border-opacity-25 '} }) }}
                            </fieldset>
                        </div>
                    </div>
                    <div class="col-sm-3 col-6">
                        <div class="m-2">
                            <fieldset class="w-100">
                                {{ form_row(form.cif, { 'attr': {'class': 'form-control border border-black border-opacity-25 '} }) }}
                            </fieldset>
                        </div>
                    </div>
                </div>
                <div class="row my-3">
                    <div class="col-sm-5 col-12">
                        <div class="m-2">
                            <fieldset class="w-100">
                                {{ form_row(form.email, { 'attr': {'class': 'form-control border border-black border-opacity-25 '} }) }}
                            </fieldset>
                        </div>
                    </div>
                    <div class="col-sm-3 col-6">
                        <div class="m-2">
                            <fieldset class="w-100">
                                {{ form_row(form.phone, { 'attr': {'class': 'form-control border border-black border-opacity-25 '} }) }}
                            </fieldset>
                        </div>
                    </div>
                    <div class="col-sm-4 col-6">
                        <div class="m-2">
                            <fieldset class="w-100">
                                {{ form_row(form.managerNif, { 'attr': {'class': 'form-control border border-black border-opacity-25 '} }) }}
                            </fieldset>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4 col-6">
                        <div class="m-2">
                            <fieldset class="w-100">
                                {{ form_row(form.bussinessName, { 'attr': {'class': 'form-control border border-black border-opacity-25 '} }) }}
                            </fieldset>
                        </div>
                    </div>
                    <div class="col-sm-8 col-12">
                        <div class="m-2">
                            <fieldset class="w-100">
                                {{ form_row(form.address, { 'attr': {'class': 'form-control border border-black border-opacity-25 '} }) }}
                            </fieldset>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-5 col-6">
                        <div class="m-2">
                            <fieldset>
                                {{ form_row(form.constitutionWriting, { 'attr': {'class': 'form-control border border-black border-opacity-25 '} }) }}
                            </fieldset>
                        </div>
                    </div>
                    <div class="col-sm-4 col-6">
                        <div class="m-2">
                            <fieldset>
                                {{ form_row(form.LOPDdoc, { 'attr': {'class': 'form-control border border-black border-opacity-25 '} }) }}
                            </fieldset>
                        </div>
                    </div>
                    <div class="col-sm-3 col-6">
                        <div class="m-2">
                            <fieldset class="w-100 text-center">
                                {{ form_row(form.subscription, { 'attr': {'class': ' border border-black border-opacity-25 '} }) }}
                            </fieldset>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-5 my-5 d-flex justify-content-center px-0"  data-controller="password-confirm">
                <div class="border border-black border-opacity-25 py-5 rounded-2">
                    <div class="p-3 d-flex flex-column align-items-center">
                        <h2 class="fs-4">Credencials d'inici de sessi√≥</h2>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="py-2">
                            <label for="username" class="my-1">Usuari:</label>
                            <div class="position-relative">
                                {{ form_widget(form.login.username, { 'attr': {'class': 'form-control border border-black border-opacity-25 ps-5'} }) }}
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                     class="bi bi-person position-absolute top-50 translate-middle-y ms-3"
                                     viewBox="0 0 16 16">
                                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z"/>
                                </svg>
                            </div>
                        </div>

                        <div class="py-2">
                            <label for="password" class="my-1">Contrasenya:</label>
                            <div class="position-relative" id="passwordController">
                                {{ form_widget(form.login.password, { 'attr': {'class': 'form-control border border-black border-opacity-25 ps-5','data-password-confirm-target':"password", 'type':"text"} }) }}
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                     class="bi bi-key position-absolute top-50 translate-middle-y ms-3"
                                     viewBox="0 0 16 16">
                                    <path d="M0 8a4 4 0 0 1 7.465-2H14a.5.5 0 0 1 .354.146l1.5 1.5a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0L13 9.207l-.646.647a.5.5 0 0 1-.708 0L11 9.207l-.646.647a.5.5 0 0 1-.708 0L9 9.207l-.646.647A.5.5 0 0 1 8 10h-.535A4 4 0 0 1 0 8m4-3a3 3 0 1 0 2.712 4.285A.5.5 0 0 1 7.163 9h.63l.853-.854a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.793-.793-1-1h-6.63a.5.5 0 0 1-.451-.285A3 3 0 0 0 4 5"/>
                                    <path d="M4 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0"/>
                                </svg>
                            </div>
                        </div>
                        <div class="py-3">
                            <label for="password">Confirma contrasenya:</label>
                            <div class="position-relative" id="passwordController">
                                <input class="form-control border border-black border-opacity-25 ps-5"
                                       type="password" id="password"
                                       name="_password" required
                                       placeholder="Confirma la contrasenya" data-password-confirm-target="password2" data-action="input->password-confirm#confirm">
                                <i class="bi bi-person-lock position-absolute top-50 translate-middle-y ms-3"></i>
                                <div id="hideEye">
                                    <i class='bi bi-eye position-absolute top-50 end-0 translate-middle-y me-3 small'></i>
                                </div>
                            </div>
                            <span data-password-confirm-target="message" ></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row border-top border-black border-opacity-25 mt-5">
        <div class="col-12">
            <div class="m-2">
                <button class="btn btn-success" type="submit">{{ button_label|default('Crear Usuari') }}</button>
            </div>
        </div>
    </div>

{{ form_end(form) }}
