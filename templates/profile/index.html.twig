{% extends 'base_2.html.twig' %}

{% block title %}Perfil d'usuari{% endblock %}

{% block body %}

    <div class="row">
        <h2 class="py-3 text-center">Perfil</h2>
        <div class="d-flex justify-content-center">
            <form class="p-3 mb-4 rounded text-white bg-primary-BHEC">
                <div class="container">
                    <div class="row">
                        <div>
                            <div class="py-1 fs-5">
                                <label class="form-label" for="usuario"></label>
                                <input class="form-control" id="usuario" type="text" value="{{ app.user.username }}">
                            </div>
                            <div>
                                <div class="py-1 fs-5">
                                    <label class="form-label" for="contrasenya">Contrasenya:</label>
                                    <input class="form-control" id="contrasenya" type="password"
                                           value="rootPassword">
                                </div>
                                <div class="py-1 fs-5">
                                    <label class="form-label" for="correu electrònic">Correu electrònic:</label>
                                    <input class="form-control" id="correu electrònic" type="email"
                                           value="{{ app.user.customer.email }}">
                                </div>
                                <div class="py-1 fs-5">
                                    <label class="form-label" for="mòbil">Mòbil:</label>
                                    <input class="form-control" id="mòbil" type="tel" value="612 70 70 90">
                                </div>
                                <div class="d-flex justify-content-center">
                                    <button type="button"
                                            class="mx-2 mb-2 mt-4 py-2 px-sm-5 px-2 fs-4 btn rounded text-white bg-secondary-BHEC ">Actualizar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}