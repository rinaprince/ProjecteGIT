{{ form_start(form) }}
<div class="container bg-white">
    <div class="row">
        <div class="col-6 mt-3">
            {{ form_row(form.dni, {'label': 'DNI'}) }}
        </div>
        <div class="col-6 mt-3">
            {{ form_row(form.phone, {'label': 'Telèfon'}) }}
        </div>
        <div class="col-6 mt-3">
            {{ form_row(form.email, {'label': 'Correu electrònic'}) }}
        </div>
        <div class="col-6 mt-3">
            {{ form_row(form.businessName, {'label': 'Nom empresa'}) }}
        </div>
        <div class="col-6 mt-3">
            {{ form_row(form.cif, {'label': 'CIF'}) }}
        </div>
        <div class="col-6 mt-3">
            {{ form_row(form.address, {'label': 'Direcció'}) }}
        </div>
        <div class="col-3 mt-3">
            {{ form_row(form.bankTitleFile , {'label': 'Titol del banc'}) }}
        </div>
        <div class="col-3 mt-3">
            {{ form_row(form.LOPDdocFile, {'label': 'Document LOPD'}) }}
        </div>
        <div class="col-6 mt-3">
            {{ form_row(form.managerNif, {'label': 'Nif del manager'}) }}
        </div>
        <div class="d-flex justify-content-start">
            <div class="col-3">
                {{ form_row(form.constitutionArticleFile, {'label': 'Article de constitució'}) }}
            </div>
        </div>
    </div>
</div>
{{ form_widget(form) }}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-center">
            <button class="btn btn-success">{{ button_label|default('Guardar') }}</button>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}
