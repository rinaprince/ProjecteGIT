{% extends 'base_3.html.twig' %}

{% block body %}
    <main class="container">
        <section>
            <div class="row">
                <h2 class="titulo">Proceso de Compra</h2>
                <hr>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="document">Elija un tipo de documentación</label>
                        <select id="document" class="form-control">
                            <option value="DNI">DNI</option>
                            <option value="NIE">NIE</option>
                            <option value="Pasaporte">Pasaporte</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="documentNumber">Documentación</label>
                        <input type="text" id="documentNumber" class="form-control" placeholder="Ingrese documentación">
                    </div>
                    <div class="form-group">
                        <label for="emailInput">Email</label>
                        <input type="email" id="emailInput" class="form-control" placeholder="Ingrese su email">
                    </div>
                    <div class="form-group">
                        <label for="phoneInput">Teléfono</label>
                        <input type="tel" id="phoneInput" class="form-control" placeholder="Ingrese su número de teléfono">
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="paymentSelect">Método de Pago</label>
                        <select id="paymentSelect" class="form-control">
                            <option value="paypal">PayPal</option>
                            <option value="mastercard">MasterCard</option>
                            <option value="visa">Visa</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="nameInput">Nombre</label>
                        <input type="text" id="nameInput" class="form-control" placeholder="Ingrese su nombre">
                    </div>

                    <div class="form-group">
                        <label for="lastNameInput">Apellido</label>
                        <input type="text" id="lastNameInput" class="form-control" placeholder="Ingrese su apellido">
                    </div>
                    <div class="form-group">
                        <label for="addressInput">Añade tu dirección aquí</label>
                        <button id="address" class="btn btn-primary">Agregar Dirección</button>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="termsCheckbox" />
                        <label class="form-check-label" for="termsCheckbox">Aceptar <a href="link_a_terminos_y_condiciones.html"
                                                                                       target="_blank">términos y condiciones de uso</a></label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="button">
                        <form action="https://jovial-villani.217-160-209-39.plesk.page/confirmacio/pagina-confirmacio.html">
                            <button class="btn btn-secondary">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Siguiente</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <div id="modal-address" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Añadir Dirección</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="nameAddress">Nombre</label>
                            <input type="text" class="form-control" id="nameAddress" placeholder="Juan">
                        </div>
                        <div class="form-group">
                            <label for="lastNameAddress">Apellido</label>
                            <input type="text" class="form-control" id="lastNameAddress" placeholder="Castillo">
                        </div>
                        <div class="form-group">
                            <label for="provinceAddress">Provincia</label>
                            <input type="text" class="form-control" id="provinceAddress" placeholder="Provincia">
                        </div>
                        <div class="form-group">
                            <label for="postalCode">Código Postal</label>
                            <input type="text" class="form-control" id="postalCode" placeholder="00000">
                        </div>
                        <div class="form-group">
                            <label for="direction">Calle y Número</label>
                            <input type="text" class="form-control" id="direction" placeholder="Calle cualquiera 11">
                        </div>
                        <div class="form-group">
                            <label for="details">Piso y Puerta (Opcional)</label>
                            <input type="text" class="form-control" id="details" placeholder="Piso 1, Puerta 1">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary">Guardar Dirección</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
