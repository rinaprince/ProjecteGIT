{% extends 'base_back_3.html.twig' %}

{% block title %}Vehicle{% endblock %}

{% block body %}
    <h1>Vehicle</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ vehicle.id }}</td>
        </tr>
        <tr>
            <th>Plate</th>
            <td>{{ vehicle.plate }}</td>
        </tr>
        <tr>
            <th>ObservedDamages</th>
            <td>{{ vehicle.observedDamages | raw }}</td>
        </tr>
        <tr>
            <th>Kilometers</th>
            <td>{{ vehicle.kilometers }}</td>
        </tr>
        <tr>
            <th>BuyPrice</th>
            <td>{{ vehicle.buyPrice }}</td>
        </tr>
        <tr>
            <th>SellPrice</th>
            <td>{{ vehicle.sellPrice }}</td>
        </tr>
        <tr>
            <th>Fuel</th>
            <td>{{ vehicle.fuel }}</td>
        </tr>
        <tr>
            <th>Iva</th>
            <td>{{ vehicle.iva }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ vehicle.description | raw }}</td>
        </tr>
        <tr>
            <th>ChassisNumber</th>
            <td>{{ vehicle.chassisNumber }}</td>
        </tr>
        <tr>
            <th>GearShit</th>
            <td>{{ vehicle.gearShit }}</td>
        </tr>
        <tr>
            <th>IsNew</th>
            <td>{{ vehicle.isNew ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>TransportIncluded</th>
            <td>{{ vehicle.transportIncluded ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>Color</th>
            <td>{{ vehicle.color }}</td>
        </tr>
        <tr>
            <th>RegistrationDate</th>
            <td>{{ vehicle.registrationDate ? vehicle.registrationDate|date('Y-m-d') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <div class="d-flex">
        <a href="{{ path('app_vehicle_index') }}" class="link-underline link-underline-opacity-0 btn btn-secondary text-light me-2">back to list</a>
        <a href="{{ path('app_vehicle_edit', {'id': vehicle.id}) }}" class="link-underline link-underline-opacity-0 btn btn-primary text-light">edit</a>
    </div>

    {{ include('vehicle/_delete_form.html.twig') }}
{% endblock %}
